<%# add navigation links to this file %>
<%= link_to 'About me', static_pages_about_path, class: 'navbar-brand' %>
<%= link_to 'Contact', static_pages_contact_path, class: 'navbar-brand' %>
<% if signed_in? %>
	<%= link_to 'Profile', current_user, class: 'navbar-brand' %>
	<%= link_to "Settings", edit_user_path(current_user), class: 'navbar-brand'%>
	<%= link_to "Send Newsletter", newsletters_path, class: 'navbar-brand' %>
	<%= link_to "Sign out", signout_path, class: 'navbar-brand', method: "delete" %>

<% else %>
    <form class="navbar-form navbar-right" role="search">
      <div class="form-group">
      	<%= form_tag root_path, method: :get , :class => "form-control form-inline input-lg"  do %>
   	    <%= text_field :query, params[:query], class: "form-control col-md-2 huge search-query search-query-rounded", :placeholder => "Search"%>
        </div>
         <%= button_tag(:type => 'submit', :class => 'btn btn-default btn-mini',:name => nil) do %> <i class="fui-search"></i><% end %>
    </form>

<% end %>


    <%= link_to "Sign in", signin_path, class: 'navbar-brand'%>
<% end %>
